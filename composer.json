{
  "name": "pb-media/hotelnowydwor-seo-optimization",
  "description": "Proces optymalizacji SEO i wydajności dla strony Hotel Nowy Dwór",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "PB MEDIA Strony Sklepy Marketing",
      "email": "biuro@pbmedia.pl"
    }
  ],
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.9",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/phpcompatibility-wp": "^2.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "scripts": {
    "lint": "vendor/bin/phpcs --standard=WordPress --extensions=php src/",
    "lint:security": "vendor/bin/phpcs --standard=WordPress-Extra --sniffs=WordPress.Security.EscapeOutput src/",
    "lint:compat": "vendor/bin/phpcs --standard=PHPCompatibilityWP --runtime-set testVersion 7.4-8.3 src/",
    "fix": "vendor/bin/phpcbf --standard=WordPress --extensions=php src/"
  }
}
